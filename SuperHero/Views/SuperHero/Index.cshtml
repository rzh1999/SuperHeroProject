@model IEnumerable<SuperHero.Models.SuperHeroModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               <label>Name</label>
            </th>
            <th>
                <label>Alter Ego</label>
            </th>
            <th>
                <label>Primary Ability</label>
            </th>
            <th>
                <label>Secondary Ability</label>
            </th>
            <th>
                <label>Catch Phrase</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.alterEgo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.primaryAbility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.secondaryAbility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.catchPhrase)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
